{
  "compression": {
    "enabled": true,
    "outputDirectory": "./var/work/compressed",
    "profiles": {
      "web": {
        "name": "Web Optimized",
        "videoCodec": "libx264",
        "audioCodec": "aac",
        "videoBitrate": "2000k",
        "audioBitrate": "128k",
        "resolution": "1920x1080",
        "fps": 30,
        "crf": 23,
        "preset": "medium",
        "format": "mp4",
        "suffix": "_web"
      },
      "mobile": {
        "name": "Mobile Optimized", 
        "videoCodec": "libx264",
        "audioCodec": "aac",
        "videoBitrate": "1000k",
        "audioBitrate": "96k",
        "resolution": "1280x720",
        "fps": 30,
        "crf": 25,
        "preset": "fast",
        "format": "mp4",
        "suffix": "_mobile"
      },
      "thumbnail": {
        "name": "Thumbnail Preview",
        "videoCodec": "libx264", 
        "audioCodec": "aac",
        "videoBitrate": "500k",
        "audioBitrate": "64k",
        "resolution": "640x360",
        "fps": 15,
        "crf": 28,
        "preset": "fast",
        "format": "mp4",
        "suffix": "_thumb"
      },
      "high_quality": {
        "name": "High Quality",
        "videoCodec": "libx264",
        "audioCodec": "aac", 
        "videoBitrate": "5000k",
        "audioBitrate": "192k",
        "resolution": "1920x1080",
        "fps": 60,
        "crf": 18,
        "preset": "slow",
        "format": "mp4",
        "suffix": "_hq"
      },
      "workspace_basic": {
        "name": "Workspace Basic",
        "description": "Optimized for lightweight video editing - good quality with smaller file sizes",
        "videoCodec": "libx264",
        "audioCodec": "aac",
        "videoBitrate": "3000k",
        "audioBitrate": "128k",
        "resolution": "1920x1080",
        "fps": 30,
        "crf": 22,
        "preset": "medium",
        "format": "mp4",
        "suffix": "_workspace_basic",
        "editing_optimized": true,
        "keyframe_interval": 30,
        "profile": "main"
      },
      "workspace_detailed": {
        "name": "Workspace Detailed", 
        "description": "High quality for detailed video editing - preserves fine details",
        "videoCodec": "libx264",
        "audioCodec": "aac",
        "videoBitrate": "6000k",
        "audioBitrate": "192k",
        "resolution": "1920x1080",
        "fps": 30,
        "crf": 19,
        "preset": "medium",
        "format": "mp4",
        "suffix": "_workspace_detailed",
        "editing_optimized": true,
        "keyframe_interval": 30,
        "profile": "high",
        "two_pass": false
      }
    },
    "defaultProfile": "workspace_basic",
    "ffmpegPath": "/usr/local/bin/ffmpeg",
    "options": {
      "overwriteExisting": false,
      "preserveOriginal": true,
      "generateThumbnails": true,
      "logLevel": "info"
    }
  }
}