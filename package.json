{
   "name": "playground",
   "version": "1.0.0",
   "description": "",
   "main": "run.js",
   "type": "module",
   "scripts": {
      "test": "node --test src/**/*.test.js",
      "test:database": "node --test src/backend/Database/__tests__/Database.test.js",
      "test:database:only": "node --test --test-only src/backend/Database/__tests__/Database.test.js",
      "test:only": "node --test --test-only src/**/*.test.js",
      "test:legacy": "node --test Database.simple.test.js",
      "test:jest": "node --experimental-vm-modules node_modules/.bin/jest",
      "start": "node run.js",
      "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
      "dev:frontend": "browser-sync start --config bs-config.json",
      "dev:backend": "nodemon run.js",
      "dev:watch": "node --watch run.js",
      "format": "prettier --write .",
      "format:check": "prettier --check .",
      "bootstrap:update": "cp node_modules/bootstrap/dist/css/bootstrap.min.css* src/frontend/static/vendor/bootstrap/ && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js* src/frontend/static/vendor/bootstrap/",
      "assets:update": "cp -r assets/robot_icon_pack/* src/frontend/static/assets/icons/",
      "assets:optimize": "echo 'Assets copied successfully! ðŸ¤– VIAI icons are ready to use.'",
      "deps:diff": "node tools/package-diff/bin/package-diff.js",
      "deps:since": "node tools/package-diff/bin/package-diff.js --since",
      "deps:list": "node tools/package-diff/bin/package-diff.js --list",
      "deps:help": "node tools/package-diff/bin/package-diff.js --help"
   },
   "jest": {
      "testEnvironment": "node",
      "transform": {}
   },
   "author": "",
   "license": "ISC",
   "dependencies": {
      "bootstrap": "^5.3.8",
      "cors": "^2.8.5",
      "express": "^5.1.0"
   },
   "devDependencies": {
      "@jest/globals": "^30.1.2",
      "browser-sync": "^3.0.4",
      "concurrently": "^9.2.1",
      "jest": "^30.1.3",
      "nodemon": "^3.1.10",
      "prettier": "^3.6.2"
   }
}
